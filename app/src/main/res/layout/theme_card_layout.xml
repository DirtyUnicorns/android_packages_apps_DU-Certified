<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/theme_card"
    android:layout_width="fill_parent"
    android:layout_height="85sp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginStart="10sp"
    android:layout_marginTop="5sp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/cards_padding"
    card_view:cardBackgroundColor="@color/cardsbg"
    card_view:cardElevation="@dimen/cards_elevation">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cards_margin">

        <LinearLayout
            android:id="@+id/kohlewrrk_coalfield_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cards_text_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        </LinearLayout>

        <ImageView
            android:id="@+id/theme_icon"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/theme_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/cards_text_margin"
            android:layout_marginBottom="@dimen/cards_text_margin"
            android:layout_marginEnd="@dimen/cards_text_margin"
            android:layout_marginLeft="@dimen/cards_text_margin"
            android:layout_marginRight="@dimen/cards_text_margin"
            android:layout_marginStart="@dimen/cards_text_margin"
            android:layout_marginTop="@dimen/cards_text_margin"
            android:layout_toEndOf="@+id/theme_icon"
            android:gravity="center_horizontal|start|fill_vertical"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theme_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/cards_text_margin"
            android:layout_marginBottom="@dimen/cards_text_margin"
            android:layout_marginEnd="@dimen/cards_text_margin"
            android:layout_marginLeft="@dimen/cards_text_margin"
            android:layout_marginRight="@dimen/cards_text_margin"
            android:layout_marginStart="@dimen/cards_text_margin"
            android:layout_marginTop="@dimen/cards_text_margin"
            android:layout_toEndOf="@+id/theme_icon"
            android:gravity="center_horizontal|start|fill_vertical"
            android:text="@string/andrezimmermann"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/theme_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/theme_about"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/cards_text_margin"
            android:layout_marginLeft="@dimen/cards_text_margin"
            android:layout_marginRight="@dimen/cards_text_margin"
            android:layout_marginStart="@dimen/cards_text_margin"
            android:text="@string/listing_paid"
            android:textColor="@color/paid_free_label"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
