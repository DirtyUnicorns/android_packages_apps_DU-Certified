<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background">

    <ScrollView
        android:id="@+id/jayrod_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/kohlewrrk_coalfield"
                android:layout_width="fill_parent"
                android:layout_height="85sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/cards_padding"
                card_view:cardBackgroundColor="@color/cardsbg"
                card_view:cardElevation="@dimen/cards_elevation"
                android:onClick="launchCoalfield"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/cards_margin">

                    <LinearLayout
                        android:id="@+id/kohlewrrk_coalfield_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/kohlewrrk_coalfield_logo"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/coalfield"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentLeft="false"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/kohlewrrk_coalfield_theme_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/coalfield_title"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/text_big"
                        android:layout_marginLeft="@dimen/cards_text_margin"
                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_marginTop="@dimen/cards_text_margin"
                        android:layout_marginBottom="@dimen/cards_text_margin"
                        android:layout_toEndOf="@+id/kohlewrrk_coalfield_logo"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:gravity="center_horizontal|start|fill_vertical"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/cards_text_margin"
                        android:layout_marginStart="@dimen/cards_text_margin"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/kohlewrrk_coalfield_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/andrezimmermann"
                        android:textColor="@color/dark_grey"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/cards_text_margin"
                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_marginTop="@dimen/cards_text_margin"
                        android:layout_marginBottom="@dimen/cards_text_margin"
                        android:layout_toEndOf="@+id/kohlewrrk_coalfield_logo"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal|start|fill_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/cards_text_margin"
                        android:layout_marginStart="@dimen/cards_text_margin" />

                    <TextView
                        android:id="@+id/kohlewrrk_coalfield_theme_paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/listing_paid"
                        android:textColor="@color/paid_free_label"                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/cards_text_margin"
                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_alignParentBottom="true"
                        android:layout_alignEnd="@+id/kohlewrrk_coalfield_about"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/cards_text_margin"
                        android:layout_marginEnd="@dimen/cards_text_margin" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/travishall_heiwa"
                android:layout_width="fill_parent"
                android:layout_height="85sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="5sp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/cards_padding"
                card_view:cardBackgroundColor="@color/cardsbg"
                card_view:cardElevation="@dimen/cards_elevation"
                android:onClick="launchHeiwa"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/cards_margin">

                    <LinearLayout
                        android:id="@+id/travishall_heiwa_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/cards_text_margin"

                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <ImageView

                        android:id="@+id/travishall_heiwa_logo"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heiwa"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/travishall_heiwa_theme_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/heiwa_title"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/text_big"
                        android:layout_marginLeft="@dimen/cards_text_margin"

                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_marginTop="@dimen/cards_text_margin"
                        android:layout_marginBottom="@dimen/cards_text_margin"
                        android:layout_toEndOf="@+id/travishall_heiwa_logo"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:gravity="center_horizontal|start|fill_vertical"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/cards_text_margin"
                        android:layout_marginStart="@dimen/cards_text_margin"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/travishall_heiwa_about"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/travishall"
                        android:textColor="@color/dark_grey"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/cards_text_margin"
                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_marginTop="@dimen/cards_text_margin"
                        android:layout_marginBottom="@dimen/cards_text_margin"
                        android:layout_toEndOf="@+id/travishall_heiwa_logo"

                        android:layout_margin="@dimen/cards_text_margin"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal|start|fill_vertical"
                        android:layout_marginStart="@dimen/cards_text_margin"
                        android:layout_marginEnd="@dimen/cards_text_margin"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:id="@+id/travishall_theme_paid"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/listing_paid"
                        android:textColor="@color/paid_free_label"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/cards_text_margin"
                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_alignParentBottom="true"
                        android:layout_alignEnd="@+id/travishall_heiwa_about"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/cards_text_margin"
                        android:layout_marginEnd="@dimen/cards_text_margin" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/liv"
                android:layout_width="fill_parent"
                android:layout_height="85sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="5sp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/cards_padding"
                card_view:cardBackgroundColor="@color/cardsbg"
                card_view:cardElevation="@dimen/cards_elevation"
                android:onClick="launchLiv"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/cards_margin">

                    <LinearLayout
                        android:id="@+id/liv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/liv_logo"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/liv"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/liv_theme_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/liv_title"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/text_big"
                        android:layout_marginLeft="@dimen/cards_text_margin"
                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_marginTop="@dimen/cards_text_margin"
                        android:layout_marginBottom="@dimen/cards_text_margin"
                        android:layout_toEndOf="@+id/liv_logo"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:gravity="center_horizontal|start|fill_vertical"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/cards_text_margin"
                        android:layout_marginStart="@dimen/cards_text_margin" />

                    <TextView
                        android:id="@+id/liv_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/giannisgx89"
                        android:textColor="@color/dark_grey"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/cards_text_margin"
                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_marginTop="@dimen/cards_text_margin"
                        android:layout_marginBottom="@dimen/cards_text_margin"
                        android:layout_toEndOf="@+id/liv_logo"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal|start|fill_vertical"
                        android:layout_marginEnd="@dimen/cards_text_margin"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/cards_text_margin" />

                    <TextView
                        android:id="@+id/liv_theme_paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/listing_paid"
                        android:textColor="@color/paid_free_label"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/cards_text_margin"
                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_alignParentBottom="true"
                        android:layout_alignEnd="@+id/liv_about"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/cards_text_margin"
                        android:layout_marginEnd="@dimen/cards_text_margin" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/kohlewrrk_outlite"
                android:layout_width="fill_parent"
                android:layout_height="85sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="5sp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/cards_padding"
                card_view:cardBackgroundColor="@color/cardsbg"
                card_view:cardElevation="@dimen/cards_elevation"
                android:onClick="launchOutlite"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/cards_margin">

                    <LinearLayout
                        android:id="@+id/kohlewrrk_outlite_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/kohlewrrk_outlite_logo"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/outlite"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:id="@+id/kohlewrrk_outlite_theme_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/outlite_title"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/text_big"
                        android:layout_marginLeft="@dimen/cards_text_margin"
                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_marginTop="@dimen/cards_text_margin"
                        android:layout_marginBottom="@dimen/cards_text_margin"
                        android:layout_toEndOf="@+id/kohlewrrk_outlite_logo"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:gravity="center_horizontal|start|fill_vertical"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/cards_text_margin"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/cards_text_margin" />

                    <TextView
                        android:id="@+id/kohlewrrk_outlite_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/andrezimmermann"
                        android:textColor="@color/dark_grey"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/cards_text_margin"
                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_marginTop="@dimen/cards_text_margin"
                        android:layout_marginBottom="@dimen/cards_text_margin"
                        android:layout_toEndOf="@+id/kohlewrrk_outlite_logo"
                        android:layout_margin="@dimen/cards_text_margin"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal|start|fill_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/cards_text_margin"
                        android:layout_marginEnd="@dimen/cards_text_margin" />

                    <TextView
                        android:id="@+id/kohlewrrk_outlite_theme_paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/listing_paid"
                        android:textColor="@color/paid_free_label"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/cards_text_margin"
                        android:layout_marginRight="@dimen/cards_text_margin"
                        android:layout_alignParentBottom="true"
                        android:layout_alignEnd="@+id/kohlewrrk_outlite_about"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/cards_text_margin"
                        android:layout_marginEnd="@dimen/cards_text_margin" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
